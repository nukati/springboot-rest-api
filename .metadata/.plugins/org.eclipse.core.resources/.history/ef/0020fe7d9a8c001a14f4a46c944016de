package com.demo.springboot;

public class TestMain {

	public static boolean isAlpha(String str) {

		if (str == null) {
			return false;
		}

		for (int i = 0; i < str.length(); i++) {
			char ch = str.charAt(i);
			if (!((ch >= 'A' && ch <= 'Z') || ch == ' ')) {
				return false;
			}
		}
		return true;
	}

	public static String convertAlpha(String str) {
		String convert = "";
		if (str == null) {
			return str;
		}
		int j = 0;
		int k = 0;
		String[] splitStr = str.split(" ");
		if (splitStr != null) {
			j = splitStr.length - 1;
		}
		for (int i = 0; i < str.length(); i++) {
			char ch = str.charAt(i);
			if (ch == ' ') {
				k = k + 1;
			} else {
				if (k > 0) {
					convert = convert + String.valueOf(k) + convert.valueOf(ch);
				} else {
					convert = convert + convert.valueOf(ch);
				}
			}
		}

//		for (int i = str.length()-1; i>-1; i--) {
//			char ch = str.charAt(i);
//			if (ch == ' ') {
//				k++;
//			}else {
//				convert=convert+String.valueOf(k)+convert.valueOf(ch);
//			}
//		}
		return convert.toLowerCase();
	}

	public static void main(String[] args) {
		String s = "A HEN  HAS  MANY   CHICKS";
		System.out.println("String: " + s);
		System.out.println("IsAlpha: " + isAlpha(s));
		System.out.println("ConvertAlpha: " + convertAlpha(s));
	}

}
